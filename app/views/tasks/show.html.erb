
<%= link_to @task.title, task_path(@task) %>

<h1><%= @task.title %></h1>
<p><%= @task.description %></p>


<div class="quote__actions">
  <%= button_to "Delete",
                task_path(@task),
                method: :delete,
                class: "btn btn--light" %>
  <%= link_to "Edit",
              edit_task_path(@task),
              class: "btn btn--light" %>
</div>